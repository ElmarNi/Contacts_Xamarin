<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.ContactDetails">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="SaveButton"
                     IconImageSource="save.png"
                     Clicked="SaveButton_Clicked"/>
        <ToolbarItem x:Name="RemoveButton"
                     IconImageSource="trash.png"
                     Clicked="RemoveButton_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout BackgroundColor="#f8f8f8">
            <StackLayout Margin="20, 10" VerticalOptions="CenterAndExpand" BackgroundColor="White" Padding="20, 10">
                <Entry Placeholder="First name" FontSize="16" x:Name="firstname"/>
                <Entry Placeholder="Last name" FontSize="16" x:Name="lastname"/>
                <Entry Placeholder="Email" FontSize="16" x:Name="email"/>
                <Entry Placeholder="Phone number" FontSize="16" x:Name="number"/>
                <Entry Placeholder="Adress" FontSize="16" x:Name="adress"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>